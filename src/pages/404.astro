---
import Layout from "../layouts/layout.astro";
---

<Layout>
  <div
    class="w-full h-[calc(100vh-140px)] flex flex-col items-center justify-center text-center"
  >
    <p class="text-xl font-semibold text-secondary">404</p>
    <h1
      class="mt-4 text-5xl font-semibold tracking-tight text-balance text-white sm:text-7xl"
    >
      Page not found
    </h1>
    <p class="mt-6 text-lg font-medium text-pretty text-gray-400 sm:text-xl/8">
      Sorry, we couldn’t find the page you’re looking for.
    </p>
    <div class="mt-10 flex items-center justify-center gap-x-6">
      <a
        href={`${import.meta.env.BASE_URL}`}
        class="rounded-md bg-secondary px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-secondary focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-secondary"
        >Go back home</a
      >
    </div>
  </div>
</Layout>
